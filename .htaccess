<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # 1. Base: Adjust this if you move folders, or use / if unsure.
    # Usually strictly relative rewrites work fine without RewriteBase
    
    # 2. Skip real files/folders (images, css, etc.)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # 3. Send everything else to index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>